		System.out.println("Create a new Person? (Y/N)");

		if (userIn.equalsIgnoreCase("y")) {

			createNewPerson();
				
		}		
		
		// System.out.println(P1.toString());

		List<Person> plist = new ArrayList<Person>();

		plist.add(P1);
		plist.add(P2);

		listOfPersons(plist);

